# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript files
[*.ts]
indent_size = 2
# Keep trailing whitespace off, Prettier handles formatting
trim_trailing_whitespace = true

# JavaScript files
[*.js]
indent_size = 2
trim_trailing_whitespace = true

# HTML templates
[*.html]
indent_size = 2
trim_trailing_whitespace = true

# CSS/SCSS files
[*.{css,scss}]
indent_size = 2
trim_trailing_whitespace = true

# JSON files
[*.json]
indent_size = 2
trim_trailing_whitespace = false  # Prettier handles JSON formatting

# Markdown files
[*.md]
indent_size = 2
trim_trailing_whitespace = false  # Markdown often needs trailing spaces
insert_final_newline = true
